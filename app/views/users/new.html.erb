<% title "Registrieren" %>

<p>Bereits registriert? <%= link_to "Anmelden", login_path %>.</p>

<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username, "Benutzername" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "E-Mailadresse" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Passwort" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Nochmals das Passwort" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Registrieren" %></p>
<% end %>
